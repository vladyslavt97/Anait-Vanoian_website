// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Schedule {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  date      String?
  location  String?
  programme String[]
  url       String?
}

model News {
  id          String  @id @default(auto()) @map("_id") @db.ObjectId
  date        String?
  link        String?
  description String?
}

model Emails {
  id          String  @id @default(auto()) @map("_id") @db.ObjectId
  email        String?
  date      DateTime
}
